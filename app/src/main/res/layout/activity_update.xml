<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_dashboard"
    android:layout_height="match_parent"
    tools:context=".ui.update.UpdateActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Yangilanish vaqti keldi!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/text_black_white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingEnd="@dimen/_15sdp"
        android:textColor="@color/text_black_white"

        android:paddingStart="@dimen/_15sdp"
        android:text="Bekjaan taxi(Driver) ilovasini yangi versiyaga yangilashingiz lozim."
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:text="Yangilash"
        android:id="@+id/updating_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:backgroundTint="@color/yellow"
        app:cornerRadius="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>